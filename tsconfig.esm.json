{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],

    "outDir": "dist/esm",

    "declaration": true,
    "declarationDir": "dist/esm",
    "emitDeclarationOnly": false,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/test.ts"],
}
