{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],

    "outDir": "dist/esm",
    "rootDir": "src",

    // ðŸ”‘ ini yang penting:
    "declaration": true,
    "declarationDir": "dist/esm",
    "emitDeclarationOnly": false,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
